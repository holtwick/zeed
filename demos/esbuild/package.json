{
  "name": "zeed-node-demo",
  "type": "module",
  "version": "0.1.0",
  "description": "Just a demo",
  "author": "Dirk Holtwick",
  "main": "index.js",
  "sideEffects": false,
  "scripts": {
    "start": "pnpm run build && ZEED=* node dist/node/index.js",
    "build:zeed": "(cd ../.. && pnpm build)",
    "build:browser": "esbuild index.ts --bundle --outdir=dist/browser --platform=browser && prettier -w dist/browser/index.js",
    "build:node": "esbuild index.ts --bundle --outdir=dist/node --platform=node && prettier -w dist/node/index.js",
    "build": "pnpm run build:zeed && pnpm run build:browser && pnpm run build:node"
  },
  "dependencies": {
    "zeed": "../.."
  },
  "devDependencies": {
    "esbuild": "^0.17.11",
    "prettier": "^2.8.4"
  }
}
