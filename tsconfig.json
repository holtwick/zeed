{
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "preserve",
    "lib": [
      "ES2022",
      "ESNext.Disposable",
      "DOM",
      "DOM.Iterable"
    ],
    "baseUrl": ".",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "types": [
      "node",
      "vitest/globals"
    ],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "demos/**/*.ts",
    "*.ts"
  ],
  "exclude": [
    "_archive",
    "node_modules",
    "dist",
    "docs",
    "*.md"
  ]
}
